{
  "name": "root",
  "private": true,
  "workspaces": [
    "docs",
    "packages/next",
    "packages/headless-core"
  ],
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "scripts": {
    "build": "npm run build --workspace=@webdevstudios/next",
    "build:docs": "npm run publish --workspace=@webdevstudios/docs",
    "clean": "npm run clean --workspace=@webdevstudios/next",
    "dev": "npm run dev --workspace=@webdevstudios/next",
    "dev:docs": "npm run dev --workspace=@webdevstudios/docs",
    "format": "npm run format --workspace=@webdevstudios/next",
    "lint": "npm run lint --workspace=@webdevstudios/next --workspace=@webdevstudios/docs",
    "lint:docs": "npm run lint --workspace=@webdevstudios/docs",
    "start": "npm run start --workspace=@webdevstudios/next",
    "test": "npm run test --workspace=@webdevstudios/next"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.6",
    "markdownlint-cli": "^0.28.1",
    "prettier": "^2.3.2"
  }
}
